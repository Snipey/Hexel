{
  "name": "discordbot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon --watch src --ext ts,json --exec ts-node src/index.ts",
    "build": "tsc",
    "start:prod": "node dist/index.js",
    "register-commands": "ts-node src/register-commands.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "shard": "ts-node src/bot/shard.ts",
    "switch-db": "ts-node scripts/switch-db.ts",
    "db:status": "ts-node scripts/switch-db.ts status",
    "db:migrate": "ts-node scripts/switch-db.ts migrate",
    "db:reset": "ts-node scripts/switch-db.ts reset",
    "db:switch-sqlite": "ts-node scripts/switch-db.ts switch sqlite",
    "db:switch-postgresql": "ts-node scripts/switch-db.ts switch postgresql",
    "docker:build": "docker build -t discordbot .",
    "docker:build-dev": "docker build --target development -t discordbot:development .",
    "docker:build-prod": "docker build --target production -t discordbot:production .",
    "docker:run": "docker run -p 3001:3001 discordbot",
    "docker:run-dev": "docker run -p 3001:3001 discordbot:development",
    "docker:run-prod": "docker run -p 3000:3001 discordbot:production",
    "docker:compose-sqlite": "docker-compose --profile sqlite up --build",
    "docker:compose-postgresql": "docker-compose --profile postgresql up --build",
    "docker:compose-prod": "docker-compose --profile production up --build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.4.1",
  "dependencies": {
    "@discordjs/builders": "^1.11.2",
    "@discordjs/rest": "^2.5.1",
    "@discordjs/voice": "^0.18.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.11.1",
    "discord-api-types": "^0.38.15",
    "discord.js": "^14.21.0",
    "dotenv": "^17.0.1",
    "fastify": "^5.4.0",
    "pg": "^8.16.3",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.11.1",
    "winston": "^3.17.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.4",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
