// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProjectMember {
  id        Int      @id @default(autoincrement())
  userId    String   // Discord user ID
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
}

model Project {
  id        Int        @id @default(autoincrement())
  name      String
  threadId  String
  createdAt DateTime   @default(now())
  deadline  DateTime?  // Optional project deadline
  resources Resource[]
  subscriptions Subscription[]
  members   ProjectMember[]
}

model Resource {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  resource  String
  amount    Int
  progress  Int      @default(0)
  deadline  DateTime? // Optional resource deadline
  type      String?
  parentId  Int?     // For dependency tracking
  parent    Resource? @relation("ResourceToResource", fields: [parentId], references: [id])
  children  Resource[] @relation("ResourceToResource")
  completed Boolean  @default(false)
  subscriptions Subscription[]
}

model Subscription {
  id         Int      @id @default(autoincrement())
  userId     String   // Discord user ID
  projectId  Int?     // Subscribed to a project
  resourceId Int?     // Subscribed to a specific resource
  project    Project? @relation(fields: [projectId], references: [id])
  resource   Resource? @relation(fields: [resourceId], references: [id])
  createdAt  DateTime @default(now())
}
